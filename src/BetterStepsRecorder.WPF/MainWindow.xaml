<mah:MetroWindow
    x:Class="BetterStepsRecorder.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BetterStepsRecorder.WPF"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utilities="clr-namespace:BetterStepsRecorder.WPF.Utilities"
    Title="Better Steps Recorder"
    Width="1200"
    Height="650"
    Dialog:DialogParticipation.Register="{Binding}"
    DataContext="{utilities:DependecyInjection Type=local:MainWindowViewModel}"
    ShowIconOnTitleBar="True"
    mc:Ignorable="d">
    <mah:MetroWindow.IconTemplate>
        <DataTemplate>
            <!--  Setting a Margin and enable hight-quality image  -->
            <Image
                Margin="4"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="/Resources/logo.ico" />
        </DataTemplate>
    </mah:MetroWindow.IconTemplate>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File" IsEnabled="False">
                    <MenuItem Header="_New" />
                    <MenuItem Header="_Open" />
                    <MenuItem Header="_Save As" />
                    <Separator />
                    <MenuItem Header="_Export">
                        <MenuItem Header="_To File">
                            <MenuItem Header="_RTF" />
                            <MenuItem Header="_HTML" />
                            <MenuItem Header="_ODT" />
                        </MenuItem>
                        <MenuItem Header="_To Obsidian Vault" />
                    </MenuItem>
                </MenuItem>
                <MenuItem Command="{Binding OpenHelpDialog}" Header="_Help" />
            </Menu>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="250" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" MinWidth="250" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <ListBox
                    Grid.Row="0"
                    Margin="5,0"
                    BorderBrush="{StaticResource MahApps.Brushes.Accent3}"
                    BorderThickness="1">
                    <ListBoxItem Content="Test1" />
                    <ListBoxItem Content="Test2" />
                    <ListBoxItem Content="Test3" />
                </ListBox>
                <Button
                    Grid.Row="1"
                    Margin="5"
                    Command="{Binding StartRecording}"
                    Content="Start recording"
                    Visibility="{Binding Recording, UpdateSourceTrigger=PropertyChanged, Converter={mah:StaticResource ReverseBooleanToVisibilityConverter}}" >
                </Button>
                <Button
                    Grid.Row="1"
                    Margin="5"
                    Command="{Binding StopRecording}"
                    Foreground="Red"
                    Content="Stop Recording"
                    Visibility="{Binding Recording, UpdateSourceTrigger=PropertyChanged, Converter={mah:StaticResource BooleanToVisibilityConverter}}">
                </Button>
            </Grid>
            <GridSplitter Grid.Column="1" Width="3" />
            <Grid Grid.Column="2">
                <Image Source="{Binding SelectedScreenshot, Converter={StaticResource Base64ImageConverter}}" />
            </Grid>
            <GridSplitter Grid.Column="3" Width="3" />
            <Grid Grid.Column="4" />
        </Grid>
    </Grid>
</mah:MetroWindow>
